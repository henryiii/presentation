\newif\iflhcbloose

% Frame title
\setbeamertemplate{frametitle}{%
    \nointerlineskip%
    \iflhcbloose
\begin{beamercolorbox}[wd=\paperwidth,ht=1.2cm]{frametitle}
	\begin{tikzpicture}
	\useasboundingbox(0,0) rectangle (\the\paperwidth,1.2);
	\fill[lhcbBlue] (0,0) rectangle (.7\paperwidth,1.2);
	\fill[lhcbLightBlue] (.7\paperwidth,0) rectangle(\paperwidth,1.2);
	\node[anchor=base west, lhcbLightBlue,font=\large] at (0,.2){\strut\insertframetitle};
	\ifx\insertframesubtitle\@empty%
	\else%
	\node[anchor=base east, lhcbLightBlue, font=\footnotesize] at (.7\paperwidth-.2cm,.1) {\strut\insertframesubtitle};
	\fi%
	\node [lhcbRed, anchor=base east] at (\paperwidth-.2cm,.7) {\large\strut\insertsection};
	\node [lhcbBlue, anchor=base east] at (\paperwidth-.2cm,.2) {\small\strut\insertsubsection};
	\node [lhcbLightBlue, anchor=north west, inner xsep=0, inner ysep=2, font=\tiny] at (0, 1.2) {\insertnavigation{.7\paperwidth}};
	\end{tikzpicture}
\end{beamercolorbox}
    	\else
    	    \begin{beamercolorbox}[wd=\paperwidth,ht=.8cm]{frametitle}
    		\begin{tikzpicture}
    		\useasboundingbox(0,0) rectangle (\the\paperwidth,.8);
    		\fill[lhcbBlue] (0,0) rectangle (.7\paperwidth,.8);
    		\fill[lhcbLightBlue] (.7\paperwidth,0) rectangle (\paperwidth,.8);
    		\node[anchor=base west, lhcbLightBlue,font=\large] at (.1,.2){\strut\insertframetitle};
    		\ifx\insertframesubtitle\@empty%
    		\else%
    		\node[anchor=base east, lhcbLightBlue, font=\footnotesize] at (.7\paperwidth-.2cm,.1) {\strut\insertframesubtitle};
    		\fi%
    		\node [lhcbRed, anchor=base east, font=\large] at (\paperwidth-.2cm,.2) {\strut\insertsection};
    		\end{tikzpicture}
    	\end{beamercolorbox}
            \fi
}

\setbeamertemplate{footline}{%
    \ifnum \insertpagenumber=1
    \vspace{.8cm}
    \else
    \begin{beamercolorbox}[wd=\paperwidth, sep=0px,ht=.8cm]{framefooter}
        \begin{tikzpicture}%
            \path [use as bounding box] (0,0) rectangle (\paperwidth, .8cm);
            \fill[color=lhcbBlue] (0,0) rectangle(\paperwidth,.5);
            \node [left] at (\paperwidth,.9972/2) {\includegraphics[height=1cm]{logos/LHCb_logo.pdf}};
            \logomini
            \node [lhcbLightBlue, left] at (\paperwidth-1.8cm,.23) {\footnotesize\insertframenumber/\inserttotalframenumber};
            \node [lhcbLightBlue, right] at (\logowidth,.23) {\footnotesize\insertshortauthor};
            \node [lhcbBlue] at (.5\paperwidth,.63) {\tiny\insertshorttitle};
            \node [lhcbLightBlue, left] at (\paperwidth-2.8cm,.23) {\footnotesize\insertdate};
        \end{tikzpicture}
    \end{beamercolorbox}
    \fi
}

